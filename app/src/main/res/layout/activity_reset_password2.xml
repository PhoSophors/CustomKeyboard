<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".activity.ResetPasswordActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!--   section back icon and text "forgot your password" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:backgroundTint="@color/product"
                android:background="@color/product"
                android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/resetBackBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_arrow_back_24"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!--   section input login -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/top_round_corner"
                android:padding="20dp"
                android:layout_marginTop="-40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainColor"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:text="Reset Your Password"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mainColor"
                    android:textSize="18sp"
                    android:text="Good to see you back."/>

                <!--  filed Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailResetEt"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawablePadding="6dp"
                        android:autofillHints="none"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/gray"
                        android:textColorHint="@color/mainColor"
                        android:drawableStart="@drawable/baseline_email_24"
                        android:ems="10"
                        android:hint="@string/email"
                        android:inputType="textNoSuggestions"
                        android:padding="15dp"
                        android:textSize="15sp"/>
                </com.google.android.material.textfield.TextInputLayout>



                <!--  text "forgot the password" -->
                <Button
                    android:id="@+id/resetPasswordBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/round"
                    style="@style/ButtonStyleYellow"
                    android:text="Reset"
                    android:textColor="@color/mainColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>